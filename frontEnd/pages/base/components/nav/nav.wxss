/* pages/base/components/nav/nav.wxss */
@import '../../font1/iconfont.wxss';
@import '../../font2/iconfont.wxss';
.nav-wrap{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  z-index: 11;
  /* background: #000; */
}
.content{
  position: relative;
  width: 100%;
  height: 44px;
}

.back{
  position: absolute;
  left: 0;
  top: 0;
  width: 88px;
  height: 44px;
  z-index:22;
  display: flex;
  align-items: center;
}
.back icon{
  font-size: 40px;
  color: #fff;
}

.title {
  color: #fff;
  text-align: center;
  line-height: 44px;
  font-weight: 500;
}