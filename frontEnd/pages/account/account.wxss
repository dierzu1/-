/* pages/account/account.wxss */
.contain{
  box-sizing: border-box;
  overflow:auto;
  position:relative;
  background:#f5f5f5;
  height:100vh;
  padding-top: 162rpx;
}
.contentBox{
  padding-bottom: 120rpx;
}
.top{
  width:100%;
  height:2rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}
.selectArea{
  background:#fff;
  padding: 35rpx 28rpx 39rpx;
}
.selectArea .areaBox{
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.selectArea .areaBox view image{
  width: 30rpx;
  height: 38rpx;
  margin-right: 38rpx;
}
.selectArea view text{
  font-size: 30rpx;
  color: #333333;
}
.selectArea .you{
  width: 12rpx;
  height: 22rpx;
}
.colorBar{
  width: 100%;
  height: 6rpx;
}
.colorBar image{
  display: block;
  width: 100%;
  height: 6rpx;
}
.goodList{
  background:#fff;
  padding: 53rpx 25rpx 44rpx 26rpx;
}
.goodItem{
  background:#fff;
  position:relative;
  display:flex;
  height:199rpx;
}
.goodItem .pic{
  width: 188rpx;
  height:188rpx;
  border-radius:14rpx;
  margin-right:12rpx;
}
.descript text{
  display:block;
}
.descript text:first-child{
  font-size:34rpx;
  color:#333333;
}
.descript text.des{
  font-size:28rpx;
  color:#afafaf;
}
.itemInfo{
  position:absolute;
  bottom:0;
  right:0;
}
.itemInfo text{
  font-size:26rpx;
}
.itemInfo text:first-child{
  color:#999999;
  margin-right:25rpx;
}
.itemInfo text:last-child{
  color:#333333;
}
.discounts{
  display: flex;
  justify-content: space-between;
  padding:22rpx 22rpx 24rpx 23rpx;
  background:#fff;
  font-size:26rpx;
  margin:10rpx 0;
}
.discounts .discount{
  color:#333333;
}
.discounts view text{
  color:#999999;
}
.discounts view text:first-child{
  margin-right:21rpx;
}
.totalBox{
  background: #fff;
}
.totalBox view{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 24rpx 25rpx;
}
.totalBox view:first-child{
  border-bottom: 1rpx solid #f5f5f5;
}
.message{
  display: flex;
  align-items: center;
  height: 74rpx;
  padding: 0 25rpx;
  font-size: 26rpx;
  background: #fff;
  margin: 10rpx 0;
}
.message text{
  margin-right: 62rpx;
  color: #333;
}
.message input{
  color: #999999;
}
.payBox{
  background: #fff;
}
.payBox .payItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:23rpx 25rpx 25rpx 25rpx;
}
.payBox .payItem:first-child{
  border-bottom: 1rpx solid #f5f5f5;
}
.payBox .payItem view image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 24rpx;
}
.payBox .payItem view text{
  font-size: 26rpx;
  color: #333;
}
.payBox .payItem .pic{
  width: 24rpx;
  height: 27rpx;
}
.accountBox{
  position:fixed;
  bottom:0rpx;
  left:0;
  box-sizing:border-box;
  display:flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  background:#fff;
  padding:22rpx 27rpx 25rpx 24rpx;
  box-shadow:0 -10rpx 10rpx 0 #f7f7f7 inset;
  z-index: 100;
}
.accountBox .pay text:first-child{
  font-size: 28rpx;
  color: #333333;
}
.accountBox .pay text:last-child{
  font-size: 30rpx;
  color: #e01616;
}
.goAccount{
  display:flex;
  align-items: center;
}
.goAccount .accountBtn{
  height:70rpx;
  line-height:70rpx;
  background:#dc3025;
  font-size:30rpx;
  color:#fff;
}
.goAccount text{
  font-size:30rpx;
  color:#e01616;
  margin-right:23rpx;
}
.totalCount{
  position:fixed;
  bottom:30rpx;
  width: 20rpx;
  height:20rpx;
  background:#df0000;
  border-radius:50%;
  color:#fffefe;
  font-size:18rpx;
  z-index:9999999999999999;
}
.cover{
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  padding: 294rpx 24rpx 0 24rpx;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,.5);
  z-index: 999;
}
.cover .confirmBox{
  /* box-sizing: border-box; */
  width: 702rpx;
  height: 500rpx;
  /* padding: 40rpx; */
  background: #fff;
  border-radius: 12rpx;
}
.confirm-top{
  display: flex;
  align-items: center;
  padding: 22rpx 0 25rpx 31rpx;
  border-bottom: 1rpx solid #2ad4c1;
}
.confirm-top text:first-child{
  font-size: 22rpx;
}
.confirm-top text:nth-child(2){
  font-size: 55rpx;
  color: #ccc;
  margin: 0 11rpx 0 19rpx;
}
.confirm-top text:last-child{
  font-size: 34rpx;
  color: #333333;
}
.totalInfo{
  padding: 28rpx 46rpx 0 46rpx;
}
.totalInfo .Info{
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.totalInfo .Info .goodName{
  font-size: 26rpx;
  color: #333333;
}
.totalInfo .Info view text:first-child{
  font-size: 34rpx;
  color: #333333;
}
.totalInfo .Info view text:last-child{
  font-size: 43rpx;
  color: #333333;
}
.payType{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 33rpx 14rpx 0 50rpx;
}
.payType view{
  display: flex;
  align-items: center;
}
.payType .iconfont{
  font-size: 48rpx;
  margin-right: 19rpx;
  color: #dc3025;
}
.payType .carName{
  font-size: 24rpx;
  color: #777777;
}
.rig{
  width: 12rpx;
  height: 20rpx;
}
.payBtn{
  width: 300rpx;
  height: 90rpx;
  margin-top: 40rpx;
  font-size: 34rpx;
  background: #dc3025;
  border-radius: 14rpx;
  color: #fff;
  line-height: 90rpx;
}