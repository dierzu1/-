<!-- 收货地址 -->
<view class='address'>
  <!-- 头部开始 -->
  <view class="header">
    <van-icon name="arrow-left" />
    <view>收货地址</view>
  </view>
  <!-- 头部结束 -->

  <!-- 中部开始 -->
  <view class='body'>
    <view class='item'wx:for="{{data}}" wx:key="{{index}}" data-index="{{index}}">
      <van-icon name="cross" class='cross'/>
      <view class='name'>
        <text>{{item.name}}</text>，
        <text>{{item.tel}}</text>
      </view>
      <view class='tel'>
        <text>{{item.province1}}</text>
        <text>{{item.province2}}</text>
        <text>{{item.city}}</text>
        <text>{{item.county}}</text>
        <text>{{item.number}}</text>
        <van-icon name="success" wx:if="{{item.check}}" class='use'/>
        <text wx:if="{{!item.check}}" class='use size'>使用</text>
      </view>
      <view class='edit'>
        <van-icon name="checked" wx:if="{{item.check}}" class='checked' />
        <van-icon name="circle" wx:if="{{!item.check}}" class='checked'/>
        <!-- circle -->
        <text wx:if="{{item.check}}" data-index="{{index}}" bindtap="default">已设为默认</text>
        <text wx:if="{{!item.check}}" data-index="{{index}}"  bindtap="default">设为默认</text>
        <view class='editRight'>
          <text class='Topping' bindtap="Topping" data-index="{{index}}" wx:if="{{item.Topping}}">取消置顶</text>
          <text class='Topping' bindtap="Topping" data-index="{{index}}" wx:if="{{!item.Topping}}">置顶</text>
          <text class='editContent' bindtap="editContent">编辑</text>
        </view>
      </view>
    </view>
  </view>
  <!-- 中部结束 -->

  <!-- 尾部开始 -->
  <view class="btn">
    <button class='add' bindtap="add">
      <van-icon name="plus" />
      <text>添加新收货地址</text>
    </button>
  </view>
  <!-- 尾部结束 -->
  <!-- 模态框开始 -->
  <van-popup show="{{ show }}" bind:close="onClose"></van-popup>
  <van-popup show="{{ show }}" overlay="{{ false }}" bind:close="onClose">
    <view class="vanPopup"> 
      <view class='addressTop'>添加新收货地址</view>
      <view class='addressBody'>
        <view class='nameNumber'>
          <input type='text' placeholder='收货姓名' value="{{name}}" bindinput='getName'></input>
          <input type='text' placeholder='电话' value="{{tel}}" bindinput='getTel'></input>
        </view>
        <text class="title">选择地区</text>
        <van-area class="vanArea"  item-height="50" area-list="{{ areaList }}" columns-num="3"/>
      </view>
      <view class='addressBottom'>
        <button type='button' bindtap="save">保存</button>
      </view>
    </view>

  </van-popup>
  <!-- 模态框结束 -->
</view>