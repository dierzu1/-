<text>推荐</text>
<van-button type="primary">按钮</van-button>
<button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">获取用户信息</button>
<view class='info'>
    <text>用户信息：{{user.nickName}}-{{user.country}}</text>
</view>
<button open-type="contact">进入客服会话</button>

<map id="map"  scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>
<button bindtap='onTapSetting'>授权面板</button>
<button bindtap='onTapLocation'>获取授权</button>
<button bindtap='map'>获取当前位置</button>
